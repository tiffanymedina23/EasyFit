<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="@color/colorPrimary">

    <Toolbar
        android:id="@+id/diet_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:title="DIET PLAN" />

    <ImageView
        android:id="@+id/logo"
        android:layout_width="176dp"
        android:layout_height="128dp"
        android:layout_below="@id/diet_toolbar"
        android:layout_centerHorizontal="true"
        android:src="@drawable/easy_fit" />

    <TextView
        android:id="@+id/caloriesTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/logo"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:text="TOTAL CALORIES : 0000 CAL"
        android:fontFamily="@font/archivo_black"
        android:textSize="20sp"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/fatTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/caloriesTV"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:text="00g FAT ................ (0000 CAL)"
        android:fontFamily="@font/archivo_black"
        android:textSize="20sp"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/carbsTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/fatTV"
        android:layout_marginTop="5dp"
        android:layout_centerHorizontal="true"
        android:text="000g CARBS .......... (0000 CAL)"
        android:fontFamily="@font/archivo_black"
        android:textSize="20sp"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/proteinTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/carbsTV"
        android:layout_marginTop="5dp"
        android:layout_centerHorizontal="true"
        android:text="000g PROTEIN ....... (0000 CAL)"
        android:fontFamily="@font/archivo_black"
        android:textSize="20sp"
        android:textColor="#000000" />

</RelativeLayout>